{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "bazel build",
            "type": "shell",
            "command": "bazel",
            "args": [
                "build",
                "--sandbox_debug",
                "--compilation_mode",
                "dbg",
                "//tests:tests"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "bazel clean",
            "type": "shell",
            "command": "bazel",
            "args": [
                "clean"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "run unit tests",
            "type": "shell",
            "command": "${workspaceRoot}/bazel-bin/tests/tests",
            "dependsOn": "bazel build"
        }
    ]
}